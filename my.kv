#:import NoTransition kivy.uix.screenmanager.NoTransition

<MyBoxLayout@BoxLayout>:
    orientation: "vertical"
    padding: (50, 20)
    spacing: 5

<ButtonHome@Button>:
    text: "Home"
    on_press:
        root.parent.parent.parent.current = self.text


ScreenManager:
    transition: NoTransition()
    id: sm


    Screen:
        name: "Home"
        MyBoxLayout:
            Button:
                text: "Настройки"
                on_press:
                    sm.current = self.text
            Button:
                text: "Прямые измерения"
                on_press:
                    sm.current = self.text
            Button:
                text: "МНК"
                on_press:
                    sm.current = self.text
            Button:
                text: "Неравноточные измерения"
                on_press:
                    sm.current = self.text
            Button:
                text: "Статистика"
                on_press:
                    sm.current = self.text
            Button:
                text: "Косвенные измерения"
                on_press:
                    sm.current = self.text
            Button:
                text: "Формулы exe"
                on_press:
                    sm.current = self.text

    Screen:
        name: "Настройки"
        MyBoxLayout:
            ButtonHome:

            BoxLayout:
                Label:
                    text: "Debug mode"
                BoxLayout:
                    GridLayout:
                        cols: 2
                        CheckBox:
                            group: "Настройки CB2"
                            active: True
                        CheckBox:
                            group: "Настройки CB2"
                            id: debug

                        Label:
                            text: "off"
                            valign: "top"
                            halign: "center"
                            text_size: [None, None]
                            text_size: self.size
                        Label:
                            text: "on"
                            valign: "top"
                            halign: "center"
                            text_size: [None, None]
                            text_size: self.size

    Screen:
        name: "Прямые измерения"
        MyBoxLayout:
            ButtonHome:

            MyTextInput:
                hint_text: "Данные: 1.3 2.5 4.74"
                id: i_pz_0
            MyTextInput:
                hint_text: "Точность прибора"
                id: i_pz_1
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Доверительный интервал"
                    size_hint: (1, .33)
                GridLayout:
                    cols: 3
                    id: i_pz_2

                    Label:
                        text: "90%"
                    Label:
                        text: "95%"
                    Label:
                        text: "99%"

                    CheckBox:
                        group: "Прямые измерения CB"
                    CheckBox:
                        group: "Прямые измерения CB"
                        active: True
                    CheckBox:
                        group: "Прямые измерения CB"

            MyTextInput:
                hint_text: "Результат"
                id: i_pz_3
            Button:
                text: "calc"
                on_press: app.calc1((i_pz_0, i_pz_1, i_pz_2, i_pz_3), debug.active)



    Screen:
        name: "МНК"
        MyBoxLayout:
            ButtonHome:

            MyTextInput:
                hint_text: "x"
                id: i_mnk_0
            MyTextInput:
                hint_text: "y"
                id: i_mnk_1

            GridLayout:
                cols: 2
                id: i_mnk_2
                Label:
                    text: "y = ax + b"
                Label:
                    text: "y = ax"

                CheckBox:
                    group: "МНК CB"
                    active: True
                CheckBox:
                    group: "МНК CB"
            MyTextInput:
                hint_text: "Результат"
                id: i_mnk_3
            Button:
                text: "calc"
                on_press: app.calc2((i_mnk_0, i_mnk_1, i_mnk_2, i_mnk_3), debug.active)


    Screen:
        name: "Неравноточные измерения"
        MyBoxLayout:
            ButtonHome:

            MyTextInput:
                hint_text: "Среднее значения"
                id: i_nr_0
            MyTextInput:
                hint_text: "Погрешность значений"
                id: i_nr_1
            MyTextInput:
                hint_text: "Результат"
                id: i_nr_2
            Button:
                text: "calc"
                on_press: app.calc3((i_nr_0, i_nr_1, i_nr_2), debug.active)

    Screen:
        name: "Статистика"
        MyBoxLayout:
            ButtonHome:

            MyTextInput:
                hint_text: "x"
                id: i_st_0
            MyTextInput:
                hint_text: "y"
                id: i_st_1
            MyTextInput:
                hint_text: "Результат"
                id: i_st_2
            Button:
                text: "calc"
                on_press: app.calc4((i_st_0, i_st_1, i_st_2))

    Screen:
        name: "Косвенные измерения"
        MyBoxLayout:
            ButtonHome:

            MyTextInput:
                hint_text: "Формула"
                id: i_cs_0
            MyTextInput:
                hint_text: "Значения"
                id: i_cs_1
            MyTextInput:
                hint_text: "Результат"
                id: i_cs_2
            Button:
                text: "calc"
                on_press: app.calc5((i_cs_0, i_cs_1, i_cs_2))
    Screen:
        name: "Формулы exe"
        MyBoxLayout:
            ButtonHome:

            MyTextInput:
                hint_text: "Формула"
                id: i_fe_0
            MyTextInput:
                hint_text: "Значения"
                id: i_fe_1
            MyTextInput:
                hint_text: "Результат"
                id: i_fe_2
            Button:
                text: "calc"
                on_press: app.calc6((i_fe_0, i_fe_1, i_fe_2))

