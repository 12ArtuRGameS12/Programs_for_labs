#:import NoTransition kivy.uix.screenmanager.NoTransition

ScreenManager:
    transition: NoTransition()
    id: sm
    Screen:
        name: "Home"
        BoxLayout:
            orientation: "vertical"
            padding: (20, 20)
            Button:
                text: "Прямые измерения"
                on_press:
                    sm.current = self.text
            Button:
                text: "МНК"
                on_press:
                    sm.current = self.text
            Button:
                text: "Неравноточные измерения"
                on_press:
                    sm.current = self.text

    Screen:
        name: "Прямые измерения"
        BoxLayout:
            orientation: "vertical"
            padding: (20, 20)
            id: kkk
            Button:
                text: "Home"
                on_press:
                    sm.current = self.text
            TextInput:
                hint_text: "Данные: 1.3 2.5 4.74 или 1.3, 2.5, 4.74"
                id: i_pz_0
            TextInput:
                hint_text: "Точность прибора"
                id: i_pz_1
            TextInput:
                hint_text: "1=90% 2=95% 3=99 По умолчанию: 2"
                id: i_pz_2
            TextInput:
                hint_text: "Результат"
                id: i_pz_3
            Button:
                text: "calc"
                on_press: app.calc1((i_pz_0, i_pz_1, i_pz_2, i_pz_3))



    Screen:
        name: "МНК"
        BoxLayout:
            orientation: "vertical"
            padding: (20, 20)
            Button:
                text: "Home"
                on_press:
                    sm.current = self.text
            TextInput:
                hint_text: "x"
                id: i_mnk_0
            TextInput:
                hint_text: "y"
                id: i_mnk_1
            TextInput:
                hint_text: "Результат"
                id: i_mnk_2
            Button:
                text: "calc"
                on_press: app.calc2((i_mnk_0, i_mnk_1, i_mnk_2))


    Screen:
        name: "Неравноточные измерения"
        BoxLayout:
            orientation: "vertical"
            padding: (20, 20)
            Button:
                text: "Home"
                on_press:
                    sm.current = self.text
            TextInput:
                hint_text: "Среднее значения"
                id: i_nr_0
            TextInput:
                hint_text: "Погрешность значений"
                id: i_nr_1
            TextInput:
                hint_text: "Результат"
                id: i_nr_2
            Button:
                text: "calc"
                on_press: app.calc3((i_nr_0, i_nr_1, i_nr_2))
